{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 *
 */
#}
{%
  set classes = [
    'row',
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished',
    paragraph.field_remove_bottom_margin.value ? paragraph.field_remove_bottom_margin.value|clean_class, 
  ]
%}
{% block paragraph %}
  <div class="container">
    <div{{ attributes.addClass(classes) }}>
        <section class="paragraph-content">
          {% block content %}
            {% if content.field_title.0 is not empty %}
              <h3 class="paragraph-title text-center mb-2 mb-lg-3">{{ content.field_title.0 }}</h3>
            {% endif %}
            <div class="t-c">
              {{ content.field_text }}
            </div>

          {% endblock %}
        </section>
    </div>
  </div>
{% endblock paragraph %}
